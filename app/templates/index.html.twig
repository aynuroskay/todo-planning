{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h3 class="mb-3 text-success">Weekly Plan</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Developer</th>
                    <th>Task</th>
                    <th>Provider</th>
                    <th>Duration</th>
                    <th>Difficulty</th>
                </tr>
                </thead>
                <tbody>
                {% for developer, details in plan %}
                    <tr>
                        <td colspan="5"><i class="bi bi-person"></i> {{ developer }}  - Remaining Time: {{ details.remaining_hours }} hours <i class="bi bi-clock"></i></td>
                    </tr>
                    {% for task in details.tasks %}
                        <tr>
                            <td class="w-25"></td>
                            <td>{{ task.task }}</td>
                            <td>{{ task.provider }}</td>
                            <td>{{ task.duration }} hours</td>
                            <td>{{ task.difficulty }}</td>
                        </tr>
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
